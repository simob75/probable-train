function reverseWords(string) {
    var wordsArr = string.split(' ');
    var revWordsArr = [];

    wordsArr.forEach(words => {
      var revWords = '';
      for (i = words.length -1; i >=0; i--) {
          revWords += words[i];
      }
      revWordsArr.push(revWords);
    })
  return revWordsArr.join(' ');
}

reverseWords("I am always late");
